        </exclusion>
        <exclusion>
          <artifactId>neo4j-io</artifactId>
          <groupId>org.neo4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>neo4j-csv</artifactId>
          <groupId>org.neo4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>neo4j-logging</artifactId>
          <groupId>org.neo4j</groupId>
        </exclusion>
        <exclusion>
